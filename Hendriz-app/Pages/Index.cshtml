@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<!--Slider-->
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        <div class="banner-item-0" style="background-image: url(assets/images/slide_01.jpg);">
            <div class="text-content">
                <h4>Best Offer</h4>
                <h2>New Arrivals On Sale</h2>
            </div>
        </div>
        <div class="banner-item-0" style="background-image: url(assets/images/slide_02.jpg);">
            <div class="text-content">
                <h4>Flash Deals</h4>
                <h2>Get your best products</h2>
            </div>
        </div>
        <div class="banner-item-0" style="background-image: url(assets/images/slide_03.jpg);">
            <div class="text-content">
                <h4>Last Minute</h4>
                <h2>Grab last minute deals</h2>
            </div>
        </div>
    </div>
</div>


<!--Slider end-->
<!--Latest products-->
<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Latest Products</h2>
                    <a href="products.html">view all products <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @{
                for (int i = 0; i < Model.Latestproducts.Count; i++)
                {
                    string link = "#";
                    string imagesrc = Model.Latestproducts[i].image;
                    <div class="col-md-4">
                        <div class="product-item">
                            <a href=@link><img src=@imagesrc alt=""></a>
                            <div class="down-content">
                                <a href=@link>
                                    <h4>@Model.Latestproducts[i].name</h4>
                                </a>
                                <h6>$@Model.Latestproducts[i].price</h6>
                                <p>@Model.Latestproducts[i].title</p>

                                <p>@Model.Latestproducts[i].watchcount Views</p>
                                <ul class="stars">
                                    @{ for (int k = 0; k < Model.Latestproducts[i].stars; k++)
                                        {
                                            <li>
                                                <i class="fa fa-star"></i>
                                            </li>
                                        }
                                    }
                                </ul>
                                <span>Reviews (@Model.Latestproducts[i].reviewCount)</span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div> 
<!--Latest products ends-->


