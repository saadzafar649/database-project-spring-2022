    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Discounted Products</h2>
                    <a href="products.html">view all products <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @{

                for (int i = 0; i < Model.Latestproducts.Count; i++)
                {

                    <div class="col-md-4">
